@page
@model RegisterModel

<h1 class="mt-4">تسجيل الاشتراك</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <hr />
            <div class="form-group">
                <label asp-for="Input.Name">الإسم</label>
                <input asp-for="Input.Name" class="form-control mt-2" />
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email">البريد الالكترونى</label>
                <input asp-for="Input.Email" class="form-control mt-2" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password">الرقم السرى</label>
                <input asp-for="Input.Password" class="form-control mt-2" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>*@
            <button type="submit" class="btn btn-primary  mt-3">تسجيل اشتراك</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
