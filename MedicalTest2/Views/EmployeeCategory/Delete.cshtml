@model MedicalTest2.Models.EmployeeCategory

@{
    ViewData["Title"] = "Delete";
}

<h1>حذف</h1>

<h3>هل أنت متأكد من الحذف  ؟</h3>
<div class="row">
    <div class="col-md-4">
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.Label("رقم التصنيف")
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Id)
            </dd>
            <dt class="col-sm-2">
                @Html.Label("اسم التصنيف")
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
        </dl>
        <form asp-action="Delete">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="submit" value="حذف" class="btn btn-danger" /> |
            <a asp-action="Index">العودة للقائمة</a>
        </form>
    </div>
</div>

