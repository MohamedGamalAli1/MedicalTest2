@model MedicalTest2.Models.Attachment

@{
    ViewData["Title"] = "Edit";
}
<link href="~/css/bootstrap4-toggle.min.css" rel="stylesheet" />

<h1>تعديل</h1>

<h4>تعديل اسم المرفق</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-md-4 form-group mt-3 mt-md-3">
                <label class="control-label">السماح بالاشعارات</label>
                <div>
                    <input type="checkbox" asp-for="AllowNotification" name="AllowNotification" checked data-toggle="toggle" data-on="نعم" data-off="لا" data-onstyle="success" data-offstyle="danger">
                </div>
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="حفظ" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div class="mt-4">
    <a asp-action="Index">العودة للقائمة</a>
</div>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/bootstrap4-toggle.min.js"></script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
