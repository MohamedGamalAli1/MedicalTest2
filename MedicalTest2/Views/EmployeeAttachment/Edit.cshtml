@model MedicalTest2.ViewModels.AddEmployeeAttachmentViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

<h1>تعديل</h1>

<h4>المرفق</h4>
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <input asp-for="@Model.EmployeeId" type="hidden" />
            <div class="col-md-12 form-group">
                <label asp-for="AttachmentId" class="control-label"></label>
                <select asp-for="AttachmentId" disabled="disabled" class="form-select" asp-items="@(new SelectList(Model.Attachments, "Id", "Name"))"></select>
                <span asp-validation-for="AttachmentId" class="text-danger"> </span>
            </div>
            <div class="row">
                <div class="col-md-6 form-group  mt-md-0">
                    <label asp-for="@Model.From" class="control-label">من </label>
                    <input type="date" class="form-control"  asp-for="@Model.From" />
                    <span asp-validation-for="@Model.From" class="text-danger"></span>
                </div>
                <div class="col-md-6 form-group  mt-md-0">
                    <label asp-for="@Model.To" class="control-label"> الى</label>
                    <input type="date" class="form-control"  asp-for="@Model.To" />
                    <span asp-validation-for="@Model.To" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="حفظ" class="btn btn-primary" />
                <br />
                <div asp-validation-summary="ModelOnly" style="font-size:x-large" class="text-danger"></div>
            </div>
        </form>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Index">العودة للقائمة</a>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
