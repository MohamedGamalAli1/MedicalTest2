@model MedicalTest2.ViewModels.AddEmployeeAttachmentViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

<h1>إضافة</h1>

<h4>مرفق جديد</h4>
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <input asp-for="@Model.EmployeeId" type="hidden" />
            <div class="col-md-12 form-group">
                <label asp-for="AttachmentId" class="control-label"></label>
                <select asp-for="AttachmentId" class="form-select" asp-items="@(new SelectList(Model.Attachments, "Id", "Name"))"></select>
                <span asp-validation-for="AttachmentId" class="text-danger"> </span>
            </div>
            <div class="row">
                <div class="col-md-6 form-group  mt-md-0">
                    <label asp-for="@Model.From" class="control-label">من </label>
                    <input type="date" class="form-control" value="" id="From" data-date-start-date="+0d" asp-for="@Model.From" />
                    <span asp-validation-for="@Model.From" class="text-danger"></span>
                </div>
                <div class="col-md-6 form-group  mt-md-0">
                    <label asp-for="@Model.To" class="control-label"> الى</label>
                    <input type="date" class="form-control" value="" id="To" data-date-start-date="+0d" asp-for="@Model.To" />
                    <span asp-validation-for="@Model.To" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="حفظ" class="btn btn-primary" />
                <br />
                <div asp-validation-summary="ModelOnly" style="font-size:x-large" class="text-danger"></div>
            </div>
        </form>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Index">العودة للقائمة</a>
</div>
<script src="~/js/jquery_js.js"></script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
