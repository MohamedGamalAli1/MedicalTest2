@model IEnumerable<MedicalTest2.Models.Nationality>

@{
    ViewData["Title"] = "Index";
}


<h1>الجنسية </h1>

<a asp-action="Create" class="btn btn-primary"><span class="fa fa-plus"></span> &nbsp; إضافة جنسية جديد</a>

@if (Model.Any())
{
    <table class="table table-active table-striped  table-bordered  mt-4">
        <thead>
            <tr class="bg-primary text-white">
                <th>
                    @Html.Label("الرقم")
                </th>
                <th>
                    @Html.Label("الإسم")
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <a asp-controller="Nationality" asp-action="Details" class="btn btn-success" asp-route-id="@item.Id">تفاصيل</a>
                        <a asp-controller="Nationality" asp-action="Edit" class="btn btn-outline-success" asp-route-id="@item.Id">تعديل</a>
                        <a asp-controller="Nationality" asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">حذف</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
