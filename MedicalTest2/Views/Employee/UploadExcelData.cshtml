@model MedicalTest2.Models.UploadExcelModel

@{
    ViewData["Title"] = "Upload";
}

<h1>تحميل</h1>



<section class="appointment section-bg">
    <div class="container" data-aos="fade-up">
        <div class="section-title">
            <h2>تحميل بيانات الموظف من ملف اكسيل</h2>
        </div>
        <form asp-action="UploadExcelData" enctype="multipart/form-data" data-aos="fade-up" data-aos-delay="100">
            @if (@ViewBag.ErrorId != null)
            {
                @ViewBag.ErrorId
            }
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-md-4 form-group mt-3">
                    <input type="file" name="Url" asp-for="Url" class="form-control" />
                    <span asp-validation-for="Url" class="text-danger"> </span>
                </div>
                <div class="col-md-4 form-group mt-3">
                    <input type="submit" value="تحميل وحفظ" class="btn btn-primary" />
                </div>
            </div>
        </form>
        <div class="text-danger mt-2">
            @ViewBag.isSaved
        </div>
    </div>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}