@model MedicalTest2.ViewModels.EmployeeViewModel

@{
    ViewData["Title"] = "Edit";
}



<h4>تعديل موظف</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            @if (@ViewBag.ErrorId != null)
            {
                @ViewBag.ErrorId
            }
            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label">رفم الموظف</label>
                <input asp-for="EmployeeId" class="form-control" readonly="readonly" />
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeName" class="control-label">اسم الموظف</label>
                <input asp-for="EmployeeName" class="form-control" />
                <span asp-validation-for="EmployeeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeTitle" class="control-label">لقب الموظف</label>
                <input asp-for="EmployeeTitle" class="form-control" />
                <span asp-validation-for="EmployeeTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeDescription" class="control-label">الوصف</label>
                <input asp-for="EmployeeDescription" class="form-control" />
                <span asp-validation-for="EmployeeDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl" class="control-label">ملف الصورة</label>
                <input type="file" asp-for="Url" class="form-control" />
                @if (@Model.ImageUrl != null)
                {
                    <img src="~/uploads/@Model.ImageUrl" alt="Alternate Text" style="height:100px;width:50px" />
                }
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label">التصنيف</label>
                <select asp-for="CategoryId" class="form-control" asp-items="@(new SelectList(Model.Categories,"Id","Name"))"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="تعديل وحفظ" class="btn btn-primary mt-3" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">العودة للقائمة</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
